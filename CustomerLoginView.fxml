<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="CustomerLoginController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="Customer Login" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <HBox spacing="5" alignment="CENTER">
        <Label text="ID:"/>
        <TextField fx:id="tfId" prefWidth="120"/>
        <Label text="Password:"/>
        <PasswordField fx:id="tfPw" prefWidth="120"/>
        <Button text="Login" onAction="#handleLogin"/>
    </HBox>
    <TextArea fx:id="taLog" prefRowCount="3" editable="false"
              style="-fx-font-family: monospace;"/>
</VBox>