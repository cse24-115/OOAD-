<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="EmployeePortalController"
      stylesheets="@style.css"
      styleClass="root">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Employee Portal" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Registration Card -->
    <VBox spacing="10" alignment="CENTER" styleClass="card">
        <TextField fx:id="tfId" promptText="New Customer ID"/>
        <TextField fx:id="tfPhone" promptText="Phone"/>
        <TextField fx:id="tfEmail" promptText="Email"/>
        <PasswordField fx:id="tfPw" promptText="Password for Customer"/>
        <Button text="Register Customer" onAction="#registerCustomer" prefWidth="200"/>
        <TextArea fx:id="taLog" prefRowCount="2" editable="false" prefWidth="260"/>
    </VBox>

    <!-- Table of Registered Customers -->
    <VBox spacing="10" alignment="CENTER" styleClass="card">
        <Label text="Registered Customers" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <TableView fx:id="tblCustomers" prefHeight="200" prefWidth="450">
            <columns>
                <TableColumn fx:id="colId" text="Customer ID" prefWidth="120"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
            </columns>
        </TableView>
        <Button text="Refresh List" onAction="#refreshCustomers" prefWidth="150"/>
    </VBox>

    <Label text="Â© 2025 Gotlhelelele Banking. All rights reserved." styleClass="status-bar"/>
</VBox>
