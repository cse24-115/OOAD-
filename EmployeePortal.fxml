<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.*?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="EmployeePortalController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="Employee Portal" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TextField fx:id="tfId" promptText="New customer ID"/>
    <TextField fx:id="tfPhone" promptText="Phone"/>
    <TextField fx:id="tfEmail" promptText="Email"/>
    <PasswordField fx:id="tfPw" promptText="Password for customer"/>
    <Button text="Register Customer" onAction="#registerCustomer"/>
    <TextArea fx:id="taLog" prefRowCount="3" editable="false"
              style="-fx-font-family: monospace;"/>
</VBox>